<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/note_form_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_margin="20dp"
        android:autofillHints="no"
        android:background="@android:color/transparent"
        android:hint="@string/note_form_title"
        android:inputType="textMultiLine"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/note_form_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="no"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/note_form_description"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/note_form_title"
        app:layout_constraintStart_toStartOf="@+id/note_form_title"
        app:layout_constraintTop_toBottomOf="@+id/note_form_title" />
</androidx.constraintlayout.widget.ConstraintLayout>